{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ping Connectivity Monitor",
  "version": "1.0.0",
  "identifier": "com.ping-connectivity.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ping Connectivity Monitor",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "category": "Utility",
    "shortDescription": "Network connectivity monitor",
    "longDescription": "A cross-platform application that monitors network connectivity by pinging configurable targets and logging the results with real-time statistics and charts."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
